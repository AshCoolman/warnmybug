<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>
	
	<h2 class="form-signin-heading"><%=t('form.forgot_my_password')%></h2>

  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('attributes.email') %>

	<br />
  <button class="btn btn-lg btn-primary btn-block" type="submit"><%=t('title.send_me_reset_password_instructions')%></button>
	
	<br />
	<%= render "users/shared/links" %>
<% end %>