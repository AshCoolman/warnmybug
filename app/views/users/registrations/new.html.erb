<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <%= devise_error_messages! %>
	
	<h2 class="form-signin-heading"><%=t('title.registration')%></h2>

  <%= f.email_field :email, autofocus: true, placeholder: t('attributes.email'), class: 'form-control' %>
	<br />
  <%= f.password_field :password, autocomplete: "off", placeholder: t('attributes.password'), class: 'form-control' %>

  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('attributes.password_confirmation') %>
		
	<button class="btn btn-lg btn-primary btn-block" type="submit"><%=t('form.save')%></button>
	<br />
	
	<%= render "users/shared/links" %>
  
<% end %>