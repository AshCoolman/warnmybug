<h3>
	Listing Projects
	<%= link_to 'New Project', new_project_path, class: "pull-right btn btn-default" %>
</h3>
<hr />
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th class="actions"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td>
					<%= link_to 'Show', project %>
        	<%= link_to 'Edit', edit_project_path(project) %>
        	<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
